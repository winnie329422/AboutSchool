<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/img01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/txt01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歡迎來到中原大學"
        android:textSize="24sp"
        android:textColor="@color/c1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/img01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineHeight="50dp"
        android:layout_marginTop="20dp"
        android:text="中原大學之建校，本基督愛世之忱，\n以信、以望、以愛，致力於中國之高等教育，\n旨在追求真知力行，以傳啟文化、服務人類。"
        android:textSize="16sp"
        android:textColor="@color/c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt01" />

</androidx.constraintlayout.widget.ConstraintLayout>